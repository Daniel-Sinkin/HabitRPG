{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev",
      "displayName": "Dev (UI + Tests)",
      "description": "Build the full SDL3/OpenGL3 Dear ImGui app and tests",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/dev",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "HABITRPG_BUILD_UI": "ON",
        "HABITRPG_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "core",
      "displayName": "Core (Tests only)",
      "description": "Build domain/data/app-core tests without rendering runtime",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/core",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "HABITRPG_BUILD_UI": "OFF",
        "HABITRPG_BUILD_TESTS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "dev"
    },
    {
      "name": "core",
      "configurePreset": "core"
    }
  ],
  "testPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "core",
      "configurePreset": "core",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
